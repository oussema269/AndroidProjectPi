<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uberBlack"
    tools:context=".TrajetLayout">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_marginBottom="34dp"
        android:background="@color/uberBlack"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <!-- Bouton Enregistrer en dehors du LinearLayout horizontal -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"

        android:layout_marginBottom="192dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/saveButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Colonne des icônes -->
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="250dp"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="38dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                app:srcCompat="@drawable/baseline_location_pin_24" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="35dp"
                android:layout_height="33dp"
                android:layout_marginBottom="16dp"
                app:srcCompat="@drawable/baseline_airline_seat_recline_extra_24" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="37dp"
                android:layout_height="35dp"
                android:layout_marginBottom="16dp"
                app:srcCompat="@drawable/baseline_access_time_24" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="36dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                app:srcCompat="@drawable/baseline_price_change_24" />
        </LinearLayout>

        <!-- Colonne des EditTexts -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="350dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/pointDeDepart"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="16dp"
                android:background="@color/black"
                android:ems="10"
                android:hint="Point de départ"
                android:inputType="text"
                android:textColor="#FFFFFFFF"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:id="@+id/destination"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="16dp"
                android:background="@color/black"
                android:ems="10"
                android:hint="Destination"
                android:inputType="text"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:id="@+id/tempsDepart"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginBottom="16dp"
                android:background="@color/black"
                android:ems="10"
                android:hint="Temps de départ"
                android:inputType="time"
                android:textColor="#FFFFFFFF"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:id="@+id/prix"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="16dp"
                android:background="@color/black"
                android:ems="10"
                android:hint="Prix"
                android:inputType="number"
                android:textColor="#FFFFFFFF"
                android:textColorHint="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="67dp"
        android:background="@color/white"
        android:text="Enregistrer"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>