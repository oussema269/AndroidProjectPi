<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uberBlack"
    tools:context=".Traject_Description">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_marginBottom="34dp"
        android:background="@color/uberBlack"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="112dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/supprimer_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Point de Départ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:text="Point de Départ :"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#FFFFFF"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/textPointDeDepart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Affichage du point de départ ici"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#FFFFFF" />

        <!-- Destination -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:text="Destination :"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#FFFFFF"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/textDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Affichage de la destination ici"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#FFFFFF" />

        <!-- Date de Départ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:text="Date de Départ :"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#FFFFFF"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/textDateDepart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Affichage de la date ici"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#FFFFFF" />

        <!-- Heure de Départ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:text="Heure de Départ :"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#FFFFFF"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/textHeureDepart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Affichage de l'heure ici"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#FFFFFF" />

        <!-- Prix -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:text="Prix :"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#FFFFFF"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/textPrix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Affichage du prix ici"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#FFFFFF" />
    </LinearLayout>

    <Button
        android:id="@+id/supprimer_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="41dp"
        android:text="Supprimer"
        app:layout_constraintBaseline_toBaselineOf="@+id/modifier_btn"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/modifier_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:layout_marginBottom="191dp"
        android:text="Modifier"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>